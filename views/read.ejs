<%- include("partials/header.ejs") %>
<link rel="stylesheet" href="/styles.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Playfair+Display&display=swap" rel="stylesheet">

<div class="reading row g-4 py-5 row-cols-1 row-cols-lg-3">
  <% data.forEach((blog) => { %>
    <div class="feature col mb-4">
      <div class="blog-box p-4 bg-light rounded shadow-sm h-100">
        <div class="feature-icon d-inline-flex align-items-center justify-content-center text-bg-primary bg-gradient fs-2 mb-3">
          <use xlink:href="#collection"></use>
        </div>
        <h3 class="fs-4 text-body-emphasis"><%= blog.blogname %></h3>
        <p><strong>By <%= blog.authname %></strong></p>
        <p><%= blog.content.slice(0, 200) %>...</p>
        <a href="/read/<%= blog._id %>" class="icon-link">Continue reading
          <use xlink:href="#chevron-right"></use>
        </a>
      </div>
    </div>
  <% }) %>
</div>

